# Use XF86Tools (F9 on T460) to play/pause firefox
"playerctl --player=firefox play-pause"
   XF86Tools

# Use XF86Search (F10 on T460) to play/pause MPV
"playerctl --player=mpv play-pause"
   XF86Search

# Use XF86LaunchA (F11 on T460) to skip to next track on current player
"playerctl next"
   XF86LaunchA

# Mute volume
"${HOME}/scripts/volume-pulse.sh mute"
   XF86AudioMute

# Increase volume
"${HOME}/scripts/volume-pulse.sh raise"
   XF86AudioRaiseVolume

# Decrease volume
"${HOME}/scripts/volume-pulse.sh lower"
   XF86AudioLowerVolume

# Mute microphone
"${HOME}/scripts/volume-pulse.sh mute-mic"
   XF86AudioMicMute

# Suspend (sleep)
"systemctl suspend"
   XF86Explorer
